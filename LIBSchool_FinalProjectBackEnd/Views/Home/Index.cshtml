<section id="slider">
    <div id="carouselExampleCaptions" class="carousel slide mt-3" data-bs-ride="false">
        <div class="carousel-inner">
            @{
                int i = 0;
            }
            @foreach (Slider slider in Model.Sliders)
            {

                var active = i++ == 0 ? "active" : "slider";
                <div class="carousel-item @active">
                    <img src="./assets/img/slider/@slider.Image"
                     class="d-block w-100" alt="...">
                    <div class="carousel-caption d-md-block">
                        <h1>@slider.Title</h1>
                        <p>@slider.Subtitle</p>
                        <div class="btn">
                            <a href="./service.html" class="btn btn-danger">Elə indi başla</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>
