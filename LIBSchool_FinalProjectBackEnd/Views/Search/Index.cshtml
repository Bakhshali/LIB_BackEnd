@model HomeVM

@{
    ViewData["Title"] = "Index";
}


<main>

     <section id="title-service" class="mt-3 p-5">
            <h1>AXTARIŞ</h1>
        </section>


    <section id="filtercourse">
        <div class="container mt-5">
            <h1>"@ViewBag.Search"</h1>
            <div class="row mt-5 d-flex justify-content-between align-items-center"
                 style="background-color:#F0F2F5 ;">


                <div class="col-lg-4 mt-4 mb-4" id="searchinput">
                    <form method="get">
                        <input type="search" value="@ViewBag.Search" name="searchCourse" style="width:70% ;" placeholder="Search the courses">
                        <input type="submit" asp-controller="Search" asp-action="index"
                               style="width: 25%; background-color: #EAB830; color: white;">
                    </form>
                </div>

                <div class="col-lg-5 mt-3">
                    <div class="box mb-3  d-flex justify-content-evenly">
                        <select name="" id="" class="customerSelect">
                            <option value="" id="1">All courses</option>
                            <option value="">İELTS</option>
                            <option value="">İngilis dili ümumi</option>
                            <option value="">İngilis dili məktəblilər üçün</option>
                            <option value="">Rus dili ümumi</option>
                            <option value="">Rus dili məktəblilər üçün </option>
                            <option value="">Alman dili ümumi</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="course">
        <div class="container">
            <div class="row  mt-3">

                @foreach (Course course in Model.Courses)
                {
                  <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="box mt-4">
                        <div class="price">
                            <p>@course.GroupPrice AZN</p>
                        </div>
                        <div class="image">
                            <a asp-controller="detail" asp-action="index" asp-route-id="@course.Id">
                                <img src="./assets/img/courses/@course.Image"
                                 alt="">
                            </a>
                        </div>
                        <div class="textbox">
                            <div class="title ms-3 mt-3">
                                <a href="./detail.html"><span>@course.Name</span></a>
                            </div>
                            <div class="btn mt-3">
                                <a asp-controller="detail" asp-action="index" asp-route-id="@course.Id" class="btn btn-dark">DAHA ƏTRAFLI</a>
                            </div>
                        </div>
                        <div class="comment">
                            <div class="icons mt-2">
                                <span class="me-2 ms-3"><i class="fa-solid fa-comment me-1"></i>0</span>
                                <span><i class="fa-solid fa-user me-1"></i>0</span>
                            </div>
                            <div class="monthly d-flex justify-content-end me-3">
                                <span>
                                    @course.GroupPrice AZN @if (@course.İndividualPrice == null)
                                    {
                                        @(" " + @course.İndividualPrice)
                                        ;
                                    }
                                    else
                                    {
                                        @("- " + @course.İndividualPrice + " AZN")
                                        ;
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </section>

    <section id="lines">
        <div class="container">
            <div class="row">
                <div class="col-lg-1 mt-3">
                    <div class="shortline mt-4 ms-2"></div>
                </div>
                <div class="col-lg-11 mt-3">
                    <div class="longline mt-4"></div>
                </div>
            </div>
        </div>
    </section>

</main>

