@model EditUserVM
@{
    ViewData["Title"] = "Edit";
}

<main>
    <section id="myprofil" style="border-top:solid 4px #E5E5E5 ;" class="mt-4">
        <div class="container">

            <form method="post">
                <div class="row mt-2 justify-content-center">
                    <div class="col-lg-2 col-sm-6 col-md-6">

                        <div class="image mt-5">
                           @*@foreac*@

                      @*      <span class="text-danger" style="font-size:14px;font-family:Verdana, Geneva, Tahoma, sans-serif" asp-validation-for="@Model.Photo"></span>*@
                        </div>
                        <div class="choosepicture">
                            <input type="file" id="upload" style="display: none;"> <a href="" class="btn btn-success ms-3" style="width: 80%; background-color: #17D292; border-radius: 50px;border:solid 2px white" onclick="document.getElementById('upload').click(); return false;"><i class="fa-solid fa-camera"></i></a>
                        </div>

                    </div>
                    <div class="col-lg-8">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="title mt-5">
                            <h3>
                                My profile
                            </h3>
                        </div>
                        <div class="box mt-4 d-flex justify-content-evenly">
                            <div class="main col-lg-5 col-sm-5  mt-4 mb-5">
                                <div class="name">
                                    <label for="">AD</label>
                                </div>
                                <div class="nameinput mt-2">
                                    <input asp-for="Name" class="form-control">
                                    <span class="text-danger" style="font-size:14px;font-family:Verdana, Geneva, Tahoma, sans-serif" asp-validation-for="@Model.Name"></span>
                                </div>
                            </div>


                            <div class="main col-lg-5 col-sm-5 mx-2 mt-4 mb-5">
                                <div class="lastename">
                                    <label for="">USERNAME</label>
                                </div>
                                <div class="lastinput mt-2">
                                    <input asp-for="Username" class="form-control">
                                    <span class="text-danger" style="font-size:14px;font-family:Verdana, Geneva, Tahoma, sans-serif" asp-validation-for="@Model.Username"></span>
                                </div>
                            </div>
                        </div>

                        <div class="title mt-5">
                            <h4>
                                Şifrəni dəyiş
                            </h4>
                        </div>

                        <div class="box mt-4 d-flex justify-content-evenly">
                            <div class="main col-lg-5 col-sm-5  mt-4 mb-5">

                                <div class="name">
                                    <label for="">ŞİFRƏ</label>
                                </div>
                                <div class="nameinput mt-2">
                                    <div class="iconeye" onclick="PasswordShowHidden()">
                                        <i id="hide1" class="fa-solid fa-eye-slash" style="top:26%"></i>
                                        <i id="hide2" class="fa-solid fa-eye" style="top:26%"></i>
                                    </div>
                                    <div class="eyeiconscript">
                                        <input asp-for="CurrentPassword" class="form-control" id="myInput">
                                        <span class="text-danger" style="font-size:14px;font-family:Verdana, Geneva, Tahoma, sans-serif" asp-validation-for="@Model.CurrentPassword"></span>
                                    </div>
                                </div>

                                <div class="name mt-4">
                                    <label for="">YENİ ŞİFRƏNİZİ TƏKRARLAYIN</label>
                                </div>
                                <div class="nameinput mt-2">
                                    <input asp-for="ConfirmPassword" class="form-control" id="myInput">
                                    <span class="text-danger" style="font-size:14px;font-family:Verdana, Geneva, Tahoma, sans-serif" asp-validation-for="@Model.ConfirmPassword"></span>
                                </div>
                            </div>


                            <div class="main col-lg-5 col-sm-5 mx-2 mt-4 mb-5">
                                <div class="lastename">
                                    <label for="">YENİ ŞİFRƏ</label>
                                </div>
                                <div class="lastinput mt-2">

                                    <input asp-for="Password" class="form-control" id="myInput">
                                    <span class="text-danger" style="font-size:14px;font-family:Verdana, Geneva, Tahoma, sans-serif" asp-validation-for="@Model.Password"></span>
                                </div>
                            </div>

                        </div>
                        <div class="btn mt-4 d-flex justify-content-between ">
                            <div class="save">
                                <button type="submit" class="btn btn-dark">
                                    DƏYİŞİKLİKLƏRİ YADDA SAXLA
                                </button>
                            </div>
                            <div class="close">
                                <button type="submit" class="btn btn-dark">
                                    <i class="fa-solid fa-power-off me-2"></i>Log out
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
</main>

@section scripts{
<script src="~/assets/js/password.js"></script>
}


