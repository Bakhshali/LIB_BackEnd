@model ForgotVM

@{
    ViewData["Title"] = "ResetPassword";
}



<main>
    <section id="account">
        <div class="container">
            <div class="row mt-5 d-flex justify-content-center">

                <div class="col-lg-5 mt-5">
                    <h3>Şifrənizi Yeniliyin</h3>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <form method="post">
                        <div class="registerbox row mt-4">
                            <div class="d-none">
                                <input asp-for="AppUser.Email" class="form-control" />
                                <input asp-for="Token" class="form-control" />
                            </div>
                            <div class="col-lg-12">
                                <label>YENİ SİFRƏ</label>
                                <input asp-for="Password" class="form-control" />
                            </div>
                            <div class="col-lg-12">
                                <label>YENİ SİFRƏ TƏKRAR</label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                            </div>
                            <div class="btn d-flex justify-content-end mt-3">
                                <button type="submit" class="btn btn-dark">Reset Password</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </section>
</main>


