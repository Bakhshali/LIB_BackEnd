@model Gallery
@{
    ViewData["Title"] = "Detail";
}

<div class="m-4">
    <div>
        <h4 >Image</h4>
        <img style="width:400px;height:250px" src="~/assets/img/thumbnail/@Model.YoutubeImage">
    </div>
    <div>
        <h4 class="mt-3">Title</h4>
        <p>@Model.Title</p>
    </div>
     <div>
        <h4 class="mt-3">Link</h4>
        <p>@Model.URL</p>
    </div>
    <div>
        <a asp-controller="youtubegallery" asp-action="index" class="btn btn-success mt-2">Geri</a>
    </div>
</div>

