@model Slider

@{
    ViewData["Title"] = "Delete";
}

<div class="m-4">
    <div>
        <h4 >Image</h4>
        <img style="width:400px;height:250px" src="~/assets/img/slider/@Model.Image">
    </div>
    <div>
        <h4 class="mt-3">Title</h4>
        <p>@Model.Title</p>
    </div>
    <div>
        <h4>@if(@Model.Subtitle==null)
            {
                @(" ")
                ;
            }
            else
            {
                @("Subtitle");
            }
        </h4>
        <p>@Model.Subtitle</p>
    </div>
    <div>
        <form method="post">
            <button  class="btn btn-danger mt-2">Delete</button>
        </form>
    </div>
</div>

