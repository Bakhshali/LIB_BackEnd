@model QuizInfo
@{
    ViewData["Title"] = "Edit";
}

<div class="m-3 mt-5">
    <div class="title">
        <h2 style="color:#273044"> <span style="color:#FF0000">#</span> Düzəliş et</h2>
    </div>
    <form method="post" enctype="multipart/form-data" class="mt-4">
        <div>
            <input class="form-control" asp-for="Name" placeholder="Fənn"> <br />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div>
            <input class="form-control" asp-for="Question" placeholder="Sual sayı"> <br />
            <span class="text-danger" asp-validation-for="Question"></span>
        </div>
        <div>
            <select class="form-control" asp-for="QuizTimeId" asp-items="@(new SelectList(ViewBag.Time,"Id","Time"))"></select> <br />
            <span class="text-danger" asp-validation-for="QuizTime"></span>
        </div>
        <div>
            <select class="form-control" asp-for="QuizTeacherId" asp-items="@(new SelectList(ViewBag.Teacher,"Id","Name"))"></select> <br />
            <span class="text-danger" asp-validation-for="QuizTeacherId"></span>
        </div>
        <div>
            <input class="form-control" asp-for="Listener" placeholder="Kursda olan dinləyici"> <br />
            <span class="text-danger" asp-validation-for="Listener"></span>
        </div>
        <div>
            <input asp-for="Photo"> <br />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-success mt-3">Yadda saxla</button>
        </div>
    </form>
</div>


