@model List<QuizInfo>

@{
    ViewData["Title"] = "Index";
}

<div class="table-responsive">
    <a asp-controller="Quiz" asp-action="create" class="btn btn-success" style="border-radius:15px; position:absolute;right:40px;top:90px; background-color:#6366F1;border:none; width:50px;"><i class="fa-solid fa-plus"></i></a>
    <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">Image <i style="font-size:14px" class="fa-solid fa-arrow-down"></i></th>
      <th scope="col">Name <i style="font-size:14px" class="fa-solid fa-arrow-down"></i></th>
      <th scope="col">Questions <i style="font-size:14px" class="fa-solid fa-arrow-down"></i></th>
      <th scope="col">Time <i style="font-size:14px" class="fa-solid fa-arrow-down"></i></th>

      <th scope="col">Detail <i style="font-size:14px" class="fa-solid fa-arrow-down"></i></th>
      <th scope="col">Edit <i style="font-size:14px" class="fa-solid fa-arrow-down"></i></th>
      <th scope="col">Delete <i style="font-size:14px" class="fa-solid fa-arrow-down"></i></th>
    </tr>
  </thead>
  <tbody>
   @foreach (QuizInfo quizInfo in Model)
  {
      <tr>
          <td><img style="width:350px;height:200px" src="~/assets/img/quiz-time/@quizInfo.Image"></td>
          <td>@quizInfo.Name</td>
          <td>@quizInfo.Question</td>
          <td>@quizInfo.QuizTime.Time</td>
      
          <td ><a asp-controller="quiz" asp-action="detail" asp-route-id="@quizInfo.Id" class="btn btn-success" style="border-radius:15px; background-color:#FFA500;border:none; width:50px;" ><i style="font-size:17px" class="fa-solid fa-circle-info"></i></a></td>
          <td><a asp-controller="quiz" asp-action="edit" asp-route-id="@quizInfo.Id" class="btn btn-success" style="border-radius:15px; background-color:#6366F1;border:none; width:50px;"><i class="fa-solid fa-pen-clip"></i></a></td>
          <td><a asp-controller="quiz" asp-action="delete" asp-route-id="@quizInfo.Id" class="btn btn-danger" style="border-radius:15px;border:none; width:50px;"><i class="fa-solid fa-trash"></i></a></td>
      </tr>
  }
 
  </tbody>
</table>
</div>

