@model QuizInfo
@{
    ViewData["Title"] = "Delete";
}

<div class="m-4">
    <div>
        <h4>Image</h4>
        <img style="width:400px;height:250px" src="~/assets/img/quiz-time/@Model.Image">
    </div>
    <div>
        <h4 class="mt-3">Name</h4>
        <p>@Model.Name</p>
    </div>
    <div>
        <h4 class="mt-3">Question</h4>
        <p>@Model.Question</p>
    </div>
    <div>
        <h4 class="mt-3">Time</h4>
        <p>@Model.QuizTime.Time</p>
    </div>
    <div>
        <h4 class="mt-3">Teacher</h4>
        <p>@Model.QuizTeacher.Name</p>
    </div>
    <div>
        <h4 class="mt-3">Listener</h4>
        <p>@Model.Listener</p>
    </div>
    <form method="post">
        <div>
            <button type="submit" class="btn btn-danger mt-2">Delete</button>
        </div>
    </form>
</div>
